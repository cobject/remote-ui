{
  "name": "remote-ui",
  "productName": "remote ui",
  "version": "0.0.1",
  "description": "remote ui for self-driving robot",
  "private": true,
  "email": "cobject@gmail.com",
  "author": {
    "name": "Suhun Kim",
    "email" : "cobject@gmail.com",
    "url" : "https://bitbucket.org/5chitect/remote-ui"
  },
  "license": "Apache2.0",
  "homepage": "https://bitbucket.org/5chitect/remote-ui",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:osx": "build --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "devDependencies": {
    "bootstrap": "~3.3.7",
    "jquery": "~3.2.1"
  },
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-builder": "^18.6.2"
  },
  "build": {
    "productName": "emote-ui",
    "appId": "com.moonabal.remote-ui",
    "asar": true,
    "protocols": {
      "name": "emote-ui",
      "schemes": [
        "remote-ui"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./resources/installer/Icon.icns"
    },
    "dmg": {
      "title": "remote-ui",
      "icon": "./resources/installer/Icon.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/Icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/installer/linux"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  }
}
